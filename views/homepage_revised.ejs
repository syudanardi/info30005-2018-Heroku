        <script>
            
            

            // Check the Quiz Answer
            function checkAnswer(option) {
                var chooseAnswer;
                var correctAnswer
                correctAnswer = document.getElementById('answer').className;
                if(option == 1) {
                    chooseAnswer = document.getElementById('option1').value;
                }

                else if (option == 2) {
                    chooseAnswer = document.getElementById('option2').value;
                }

                if (chooseAnswer == correctAnswer) {
                    document.getElementById("option-answer").innerHTML = "<strong><font color='green' size='5px'>You are correct!</font></strong><br>The answer is " + correctAnswer;
                }
                else {
                    document.getElementById("option-answer").innerHTML = "<strong><font color='red' size='5px'>You are wrong!</font></strong><br>The answer is " + correctAnswer; 
                }
            }

        </script>

